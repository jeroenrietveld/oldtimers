<%= form_for @question do |f| %>
	<%= render 'shared/error_messages' %>

	<%= f.fields_for :answers do |builder| %>
	 	<%= builder.text_area :answer, { :placeholder => "Klik om te reageren...", :class => "span8", :rows => 8 } %>
	 	<div class="span8 offset2 buttons">
			<button>Bedrijf toevoegen</button>
			<button>Product toevoegen</button>
		</div>
	<% end %>

  <%= f.submit "Antwoord" %>
<% end %>