<section id="question-form">
	<section class="profile-photo">
		<img src="" alt="" width="75" height="75"/>
	</section>
	<section class="form">
		<form method="post">
		<input type="text" name="title" placeholder="Titel..."/>
		<textarea name="question" placeholder="Beschrijf je vraag..." rows="15" cols="30"></textarea>
		<input type="text" name="keywords" placeholder="Keywords..."/>
		<select name="categorie">
			<option>Dak onderhoud</option>
		</select>
		<button name="submit" type="submit">Vraag</button>
	</form>
	</section>
</section>

<section id="questions">
	<% for @question in @questions %>
		<%= @question.title %>
	<% end %>
	<article id="question">
		<section class="profile-photo">
			<%= image_tag("anonymous.png", :alt => "Profile Picture", :class => "profile-photo", :width => "75", :height => "75") %>
		</section>
		<section class="question">
			<p>Dit is het eerste antwoord op deze vraag!</p>
			<p>Categorie Dak Onderhoud</p>
			<p>47 minuten geleden.</p>
			
			<%= image_tag("favorite.png", :alt => "Favorite", :class => "favorite") %>
			<%= image_tag("comment.png", :alt => "Comment", :class => "comment") %>

			</section>
		<div id="clearfix"></div>
	</article>
</section>