@import "bootstrap";

html, body {
	width:100%;
	height:100%;
}

.clearfix {clear:both;}
.relative {position: relative;}
.profile-photo {
	text-align:left;
}
.blue-border {
	border: lightblue solid;
	border-radius: 5px;
}
button {
	height:30px;
	margin-top:-10px;
}

section#question-form {
	height:50%;
	min-height:500px;
	padding-top:50px;

	section.form {
		margin-left:40px;

		form {
			width:500px;
		}

		input, select, textarea {
			width: 100%;
		}
		select {
			width: 534px;
		}
		.add-label-button {
			background: url(<%= asset_path 'add_label3.png' %>) no-repeat;
			position: absolute;
			width: 30px;
			top:13px;
			right:-8px;
			border:none;
		}
		button {
			width: 20%;
		}
	}
}

section#questions {
	background: #E3E3E3;
	height:50%;
	padding-top:50px;
	
	/*
	position:absolute;
	left:0;
	right:0;
	*/

	article#question {
		margin:10px 0;
		margin-left:34.5%;
		margin:10px auto;

		.question {
			position: relative;
			border: 1px solid;
			height:auto;
			padding:11px;
			background:#eee;

			p {
				margin:0;
				font-size:13px;
			}
			.favorite {
				position:absolute;
				top:5px;
				right:5px;
			}
			.comment {
				position:absolute;
				bottom:5px;
				right:5px;
			}
		}
	}
}

