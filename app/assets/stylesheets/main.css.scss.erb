@font-face {
  font-family: 'InterFace';
  src: url('<%= asset_path('InterFaceLt.ttf') %>');
  font-weight: normal;
  font-style: normal;
}

body{
	font-family: InterFace;
}

.clearfix {clear:both;}
.relative {position: relative;}
.profile-photo {
	text-align: center;
}
.blue-border {
	border: solid #b7e4ea;
	border-radius: 5px;
}
.green-border {
	border: solid #bfebb6;
	border-radius: 5px;
}

::-webkit-input-placeholder { color: #B1AFAF; font-family: InterFace; font-size: 15px; }
::-moz-placeholder { color: #B1AFAF; font-family: InterFace; font-size: 15px; } /* firefox 19+ */
:-ms-input-placeholder { color: #B1AFAF; font-family: InterFace; font-size: 15px; } /* ie */
input:-moz-placeholder { color: #B1AFAF; font-family: InterFace; font-size: 15px; }

button, input[type=submit] {
	color: #777676;
	font-family: InterFace !important;
}