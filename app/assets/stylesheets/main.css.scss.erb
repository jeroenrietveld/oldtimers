@import "bootstrap";

html, body {
	width:100%;
	height:100%;
	background: #F7F7F7;
	color: #626262;
}

.clearfix {clear:both;}
.relative {position: relative;}
.profile-photo {
	text-align: center;
}
.blue-border {
	border: solid #b7e4ea;
	border-radius: 5px;
}
.green-border {
	border: solid #bfebb6;
	border-radius: 5px;
}
button {
	height:30px;
	margin-top:-10px;
}

section#question-form {
	height: 50%;
	min-height: 400px;
	max-height: 500px;
	padding: 50px 0;

	section.form {
		margin-left:40px;

		form {
			width:500px;
		}

		input, select, textarea {
			width: 100%;
			border: none;
			resize: none;
		}
		input[type=text], textarea {
			box-shadow: inset 1px 1px 1px 0 #D6D6D6;
		}
		select {
			width: 534px;
		}
		.add-label-button {
			background: url(<%= asset_path 'add_label3.png' %>) no-repeat;
			position: absolute;
			width: 30px;
			top:13px;
			right:-8px;
			border:none;
		}
		input[type=submit] {
			margin-top: 5px;
			width: 85px;
			height: 33px;
			background: url(<%= asset_path 'stel_vraag.png' %>) no-repeat;
		}

		.select-categories ul {
			border-radius: 4px 4px 0 0;
			border-color: #D6D6D6;
			box-shadow: none;

			input{
				box-shadow: none;
			}
		}
	}
}

section#questions {
	background: #e9e8ea;
	height:50%;
	padding-top:50px;
	box-shadow: inset 0 5px 10px 0 #c1bfc2;
	
	/*
	position:absolute;
	left:0;
	right:0;
	*/

	article#question {
		margin:10px 0;
		margin-left:34.5%;
		margin:10px auto;

		.question {
			position: relative;
			border: 1px solid;
			height:auto;
			padding:11px;
			background:#eee;

			p {
				margin:0;
				font-size:13px;
			}
			.favorite {
				position:absolute;
				top:5px;
				right:5px;
			}
			.comment {
				position:absolute;
				bottom:5px;
				right:5px;
			}
		}
	}
}

.select2-drop{
	border-color: #D6D6D6;
}

