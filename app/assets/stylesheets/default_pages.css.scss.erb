@import "bootstrap";

html, body {
	width:100%;
	height:100%;
	background: #F7F7F7;
	color: #626262;
	font-family: InterFace;
}

button {
	height:30px;
	margin-top:-10px;
}

section#question-form {
	height: 50%;
	min-height: 400px;
	max-height: 500px;
	padding: 50px 0;

	section.form {
		margin-left:40px;

		form {
			width:500px;
		}

		input, select, textarea {
			width: 100%;
			border: none;
			resize: none;
		}
		input[type=text], textarea {
			box-shadow: inset 1px 1px 1px 0 #D6D6D6;
		}
		select {
			width: 534px;
		}
		.add-label-button {
			background: url(<%= asset_path 'add_label3.png' %>) no-repeat;
			position: absolute;
			width: 30px;
			top:13px;
			right:-8px;
			border:none;
		}
		input[type=submit] {
			margin-top: 5px;
			width: 85px;
			height: 33px;
			background: url(<%= asset_path 'stel_vraag.png' %>) no-repeat;
		}

		.select-categories ul {
			border-radius: 4px 4px 0 0;
			border-color: #D6D6D6;
			box-shadow: none;

			input{
				box-shadow: none;
			}
		}
	}
}

section#questions {
	background: #eceaeb;
	padding: 50px 0;
	box-shadow: inset 0 2px 3px 0 #cecece;
	
	article#question {
		margin: 10px 0;
		margin-left: 34.5%;
		margin: 10px auto;
		color: #595959;

		.question {
			position: relative;
			border-radius: 5px;
			height: auto;
			padding: 8px 20px;
			background: #fff;
			box-shadow: 3px 3px 4px 0 #e0dfdf;

			a {
				text-decoration: none;
				color: #626262;
			}
			a:hover{
				color: #0088CC;
			}
			p {
				margin:0;
				font-size:13px;
			}
			p:first-letter{
				text-transform: capitalize;
			}

			.title{
				font-size: 16px;
			}
			.category{
				font-size: 13px;
				margin-top: 10px;
			}
			.actions {
				margin-top: 10px;

				img:hover {
					cursor: pointer;
				}

				.favorite {
					float: right;
				}
				.comment {
					float: right;
					margin-left: 15px;
				}
			}
		}
	}
}

.select2-drop{
	border-color: #D6D6D6;
}

.select2-container-multi .select2-choices .select2-search-choice {
    background-image: -moz-linear-gradient(center top , #F8A5A6 20%, #E86C70 100%);
    border-radius: 12px;
    border: none;
    color: #FFF;
    padding: 5px 8px 5px 18px;

    a{
    	color: #FFF;
    	margin-top: 2px;
    	margin-left: 2px;
    }
}